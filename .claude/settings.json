{
  "permissions": {
    "allow": [
      "Bash(uv run inv lint)",
      "Bash(uv run pytest:*)",
      "Bash(uv run inv test)",
      "Bash(uv run inv test.cov)",
      "Bash(uv run inv lint.mypy)",
      "Bash(uv run inv lint.pylint)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Read(.env.*)"
    ]
  }
}